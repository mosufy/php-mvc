<!DOCTYPE html>
<html lang="en">
<head>
<base href="{{ constant('URL') }}">
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ metaTitle }}</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="icon" type="image/ico" href="img/favicon.ico" />
<link href='//fonts.googleapis.com/css?family=Open+Sans:300,400,700' rel='stylesheet' type='text/css'>
<link rel="stylesheet" href="css/normalize.css">
<link rel="stylesheet" href="css/account.css">
<script src="js/vendor/jquery-1.11.1.min.js"></script>
</head>
<body>
<div id="wrapper">
  <div id="header"> {% include '_templates/account/header.twig' %} </div>
  <div id="main"> 
    <!-- Content, will be passed here via Twig --> 
    {% block content %} {% endblock %} </div>
</div>
<div id="footer"> {% include '_templates/account/footer.twig' %} </div>
<script src="js/vendor/retina.min.js" type="text/javascript"></script> 
<script>
function toggleLightbox(frame){
	if ($('#lightbox').css('display') == 'none'){
		$('body').css('overflow','hidden');
	} else {
		$('body').css('overflow','auto');
		$('.lightbox-frame').fadeOut('fast');
	}
	
	$('#lightbox').fadeToggle('fast');
	$('#'+frame).fadeToggle('fast');
}
function toggleMenuBar(){
	$('#nav').slideToggle('fast');
}
</script>
</body>
</html>